pipeline {
    agent any
    
    environment {
        DOCKER_CREDENTIALS_ID = 'ForDocker' // Ensure this matches the ID of your Docker credentials in Jenkins
        DOCKER_REGISTRY = 'https://hub.docker.com/u/shadchoudhary'
        IMAGE_NAME = 'shadchoudhary/testing'
        IMAGE_TAG = 'first'
        GIT_REPO = 'https://github.com/Shadal001/story-blog.git'
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from Git
                git url: "${env.GIT_REPO}", branch: 'master'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image
                    docker.build("${IMAGE_NAME}:${IMAGE_TAG}")
                }
            }
        }
        stage('Push Docker Image') {
            steps {
                script {
                    // Log in to Docker registry
                    docker.withRegistry("https://${DOCKER_REGISTRY}", "${DOCKER_CREDENTIALS_ID}") {
                        // Push the Docker image
                        docker.image("${IMAGE_NAME}:${IMAGE_TAG}").push()
                    }
                }
            }
        }
    }
}
